<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:layout_margin="5dp"
    app:cardCornerRadius="10dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorSecond">

        <de.hdodenhof.circleimageview.CircleImageView xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_completed"
            android:layout_width="96dp"
            android:layout_height="96dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:src="@drawable/ic_android"
            app:civ_border_width="2dp" />

        <TextView
            android:id="@+id/textview_name_completed"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/profile_image_completed"
            android:layout_marginStart="20dp"
            android:layout_marginTop="5dp"
            android:layout_toRightOf="@id/profile_image_completed"
            android:text="SingerName"
            android:textColor="#000"
            android:textSize="20sp" />

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_alignBottom="@id/textview_name_completed"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/textview_name_completed"
            android:src="@drawable/tick_mark" />

        <Button
            android:id="@+id/rate_button"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@id/profile_image_completed"
            android:layout_marginStart="20dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@id/profile_image_completed"
            android:background="@drawable/button_background_completed"
            android:foreground="?android:attr/selectableItemBackground"
            android:text="@string/r_a_t_e" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>